
@{
    Layout = null;
}
@using SaleSystem.Models
@model usuarios
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Sale | Login</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/lib/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/css/ionicons.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/lib/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- SweetAlert2 -->
    @*<link rel="stylesheet" href="~/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css">*@
    <!-- Toastr -->
    <link rel="stylesheet" href="~/lib/plugins/toastr/toastr.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/lib/admin-lte/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="~/css/googleapis.css" rel="stylesheet">
    <link href="~/css/Style.css" rel="stylesheet" />
</head>
<body class="hold-transition lockscreen">
    <!-- Automatic element centering -->
    <div class="lockscreen-wrapper">
        <div class="lockscreen-logo">
            <a href="/Login"><b>Sale</b>System</a>
        </div>
        <!-- User name -->
        <div class="lockscreen-name">@Model.nombre</div>

        <!-- START LOCK SCREEN ITEM -->
        <div class="lockscreen-item">
            <!-- lockscreen image -->
            <div class="lockscreen-image">
                <img src="@Model.img" alt="User Image">
            </div>
            <!-- /.lockscreen-image -->
            <!-- lockscreen credentials (contains the form) -->
            <form class="lockscreen-credentials" method="post" asp-action="Index" asp-controller="Login">
                <div class="input-group">
                    <input asp-for="password" autofocus class="form-control" placeholder="Contraseña">

                    <input type="hidden" name="correo" value="@Model.correo" />

                    <div class="input-group-append">
                        <button type="submit" class="btn"><i class="fas fa-arrow-right text-muted"></i></button>
                    </div>
                </div>
            </form>
            <!-- /.lockscreen credentials -->

        </div>
        <!-- /.lockscreen-item -->
        <div class="help-block text-center">
            Ingrese su contraseña para iniciar session.
        </div>
        <div class="text-center">
            <a href="/Login">O usar una cuenta diferente.</a>
        </div>
        <div class="lockscreen-footer text-center">
            Copyright &copy; 2014-2019 <b><a href="#" class="text-black">SaleSystem</a></b><br>
            All rights reserved
        </div>
    </div>
    <!-- jQuery -->
    <script src="~/lib/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/lib/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/lib/plugins/sweetalert2/sweetalert2.min.js"></script>
    <!-- Toastr -->
    <script src="~/lib/plugins/toastr/toastr.min.js"></script>
    <script src="~/lib/admin-lte/js/adminlte.min.js"></script>
</body>
</html>
<script>
    $(document).ready(() => {
        $('form').submit(function (e) {
            if ($('#password').val()=='') { e.preventDefault(); toastr.error('Ingresar Contraseña'); }
        });
    });
</script>
